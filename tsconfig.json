{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2022",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,      // Разрешение JSON модулей
      "moduleResolution": "node"      // Разрешение модулей в стиле Node.js
    },
    "include": ["helpers/**/*.ts"],
    "exclude": ["node_modules"]
  }
  